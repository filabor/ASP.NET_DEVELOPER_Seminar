@model List<Product>

<h3>Product list</h3>
<hr />


<div class="row mb-5">
    <div class="col-6">
        <form method="GET" asp-area="" asp-controller="home" asp-action="product">
            <div class="input-group mb-3">
                <select class="form-select" id="floatingSelect" name="id">
                    <option selected value="">All categories</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.Title</option>
                    }
                </select>

                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Filter products by category</button>
                </div>
            </div>
        </form>
    </div>
</div>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">

                    @if (item.ImageName != null)
                    {
                        <p>
                            <img src="~/images/@item.ImageName" style="width:100%; height=250px;">
                        </p>
                    }

                    <h5 class="card-title">@item.Title</h5>
                    <hr>

                    <a class="btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="ProductDetails" asp-route-id="@item.Id" role="button">See details</a>
                </div>
            </div>
        </div>
    }
</div>